@model BussinessObject.Models.Club

@{
	var stadium = ViewData["Stadium"] as SelectList;
	var city = ViewData["City"] as SelectList;
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
}
<h2>Create Club</h2>

@using (Html.BeginForm("Create", "Club", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	<div class="form-group">
		@Html.LabelFor(model => model.Name)
		@Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.Name)
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.StadiumId)
		@Html.DropDownListFor(model => model.StadiumId,stadium, " Select Stadium ", new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.StadiumId)
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.CityId)
		@Html.DropDownListFor(model => model.CityId,city, " Select City ", new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.CityId)
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Logo)
		<input type="file" name="LogoFile" accept="image/*" class="form-control-file" />
		@Html.ValidationMessageFor(model => model.Logo)
	</div>

	<button type="submit" class="btn btn-primary">Create</button>
}
