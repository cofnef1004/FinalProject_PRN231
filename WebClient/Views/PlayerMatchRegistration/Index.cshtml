@model IEnumerable<BussinessObject.Models.PlayerMatchRegistration>
@{
	Layout = "_Homelayout";
}
<style>
	.player-avatar {
		width: 100px;
		height: 100px;
	}

	.Wrap {
		height: 100vh;
		overflow-y: scroll;
	}

		.Wrap::-webkit-scrollbar {
			display: none;
		}
</style>
<link rel="stylesheet" type="text/css" href="~/css/Player/PlayerIndex.css">
<div class="Wrap">
