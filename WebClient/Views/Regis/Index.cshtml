@{
	Layout = null;
}

@model BussinessObject.Models.User
@{
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
}
<section class="text-center text-lg-start">
	<style>
		.cascading-right {
			margin-right: -50px;
		}
	</style>

	<div style="margin-top:100px" class="container py-4">
		<div class="row g-0 align-items-center">
			<div class="col-lg-5 mb-5 mb-lg-0">
				<div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
					<div style="color:white" class="card-body p-5 text-center">
						<img src="https://cdn.freebiesupply.com/images/large/2x/premier-league-logo-png-transparent.png" class="w-100 rounded-4 shadow-4"
							 alt="" />
						@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
						{
							<div style="color:red" class="error-message">
								@ViewBag.ErrorMessage
							</div>
						}
						<form method="post" asp-controller="Regis" asp-action="Register">
							<!-- Username input -->
							<div class="form-outline mb-4">
								<input type="text" id="form3Example3" class="form-control" name="username" required />
								<label class="form-label" style="color:black" for="form3Example3">Username</label>
							</div>

							<!-- Password input -->
							<div class="form-outline mb-4">
								<input type="password" id="form3Example4" class="form-control" name="password" required />
								<label class="form-label" style="color:black" for="form3Example4">Password</label>
							</div>

							<!-- Confirm password input -->
							<div class="form-outline mb-4">
								<input type="password" id="form3Example5" class="form-control" name="confirmPassword" required />
								<label class="form-label" style="color:black" for="form3Example5">Confirm Password</label>
							</div>

							<div class="form-outline mb-4">
								<input type="number" id="form3Example5" class="form-control" name="phone" required />
								<label class="form-label" style="color:black" for="form3Example5">Phone</label>
							</div>

							<div class="form-outline mb-4">
								<input type="password" id="form3Example6" value="2" class="form-control" name="role" hidden />
							</div>

							<!-- Submit button -->
							<button type="submit" class="btn btn-primary">
								Register
							</button>
						</form>
						<form>
							<a class="btn btn-primary" href="/login">Back to login</a>
						</form>
					</div>
				</div>
			</div>

			<div style="border-radius:10px" class="col-lg-7 mb-5 mb-lg-0">
				<img style="border-radius:10px" src="https://www.taegukwarriors.com/wp-content/uploads/2020/08/FPL-Statement-Lead.jpg" class="w-100 rounded-4 shadow-4"
					 alt="" />
			</div>
		</div>
	</div>
</section>

